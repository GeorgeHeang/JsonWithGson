    <Space
        android:layout_width="match_parent"
        android:layout_height="5sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="hint"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="hint"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="hint"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="hint"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5sp"/>
</LinearLayout>